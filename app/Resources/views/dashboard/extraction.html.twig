{# app/Resources/views/front/accueil.html.twig #}

{% extends "baseDashboard.html.twig" %}


{% block title %}
    Accueil - {{ parent() }}
{% endblock %}


{% block body %}
{{  parent() }}



    {# bloc formulaire de recherche #}
    <section class="mbr-section" id="form2-14" style="background-color: rgb(163, 143, 132); padding-top: 40px; padding-bottom: 0px;">
        <div class="mbr-section mbr-section__container mbr-section__container--middle">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 text-xs-center">
                        <h3 class="mbr-section-title display-2">Extraction par date</h3>

                    </div>
                </div>
            </div>
        </div>
        <div class="mbr-section mbr-section-nopadding">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-lg-10 col-lg-offset-1" data-form-type="formoid">

                        {{ form_start(form) }}
                        {% for message in app.flashes('notice') %}
                            <div class="btn-success">
                                {{ message }}
                            </div>
                            <br />
                        {% endfor %}
                        {% if fichierExtract %}
                            <div class="btn-success">
                                Si le téléchargement ne démarre pas au bout de 5 secondes, le fichier est disponible  <a href="/dashboard/extract/{{   fichierExtract }}" target="_blank">ici</a>.
                            </div>
                            <br />
                        {% endif %}

                        {% if form_errors(form) %}
                            <div class="alert alert-danger">
                                {{ form_errors(form) }}
                            </div>
                        {% endif %}

                        <div  id="sandbox-container" class="mbr-subscribe mbr-subscribe-dark">
                            {{ form_errors(form.datedebut) }}
                                {{ form_widget(form.datedebut, {'attr': {'class': 'form-control js-datepicker', 'placeholder': 'Du'}}) }}
                            </div>

                            <br />

                            <div id="sandbox-container2" class="mbr-subscribe mbr-subscribe-dark">
                                {{ form_errors(form.datefin) }}
                                {{ form_widget(form.datefin, {'attr': {'class': 'form-control js-datepicker', 'placeholder': 'au'}}) }}
                            </div>

                            <br />

                            <div class="col-xs-12">
                                {{ form_widget(form.extraire,{'attr':{ 'class': 'btn btn-info' }} ) }}
                            </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    {# fin bloc formulaire de recherche #}
{% endblock body %}
