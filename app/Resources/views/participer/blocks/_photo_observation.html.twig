{# app/Resources/views/blocks/_photo_observation.html.twig #}

<button type="button" class="btn btn-info" data-toggle="modal" data-target="#image">Voir la photo
</button>

<div class="modal fade" id="image" role="dialog" >
    <div class="modal-dialog" >
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">X</button>
                <h4 class="modal-title">Photo observation N° {{observation.id}}</h4>
            </div>
            <div class="modal-body">
                <img class="img-fluid" src="{{ asset('fnat/photos/' ~ observation.photo ~ '') }}" alt="Observation N° {{ observation.id }}" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
