{# app/Resources/views/front/fiche_observationhtml.twig #}

{% extends "participer/observation_base.html.twig" %}

{% block title %}
    Fiche {{ observation.id }} - {{ parent() }}
{% endblock %}

{% block body %}

    <section class="mbr-section mbr-after-navbar" style="background-color: rgb(105, 176, 171); padding-top: 120px; padding-bottom: 0;">

        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">X</button>
                        <h4 class="modal-title">Confirmez la suppression de l'observation</h4>
                    </div>
                    <div class="modal-footer">
                    <p>
                        Souhaitez-vous laisser un message à l'observateur ?
                    </p>

                        {{ form_start(formModal) }}
                        <div class="col-xs-12">
                            {{ form_errors(formModal.comm_nat) }}
                            {{ form_widget(formModal.comm_nat, {'attr': {'class': 'form-control', 'placeholder': 'Message'}}) }}
                            <br>
                            {{ form_widget(formModal.confirmer,{'attr':{ 'class': 'btn btn-danger' }} ) }}
                            {{ form_end(formModal) }}

                        </div>
                    </div>

                </div>
            </div>
        </div>

        {% include("messagesValidation.html.twig") %}

        <div class="container">
            <h1 class="mbr-section-title text-white">Fiche observation n° {{ observation.id }}</h1>
        </div>

        {{ include('participer/blocks/_carte_fiche.html.twig') }}

    </section>

    <!--  Blocks -->
    {{ include('front/blocks/_follow.html.twig') }}

{% endblock body %}

{% block javascripts %}
    {{ parent() }}

    <!-- google maps -->
    <script src="{{ asset('assets/fnat/js/googlemaps_carte_observation.js') }}" ></script>

{% endblock javascripts %}

