<!--  Formulaire inscription  -->
<section class="mbr-section mbr-section-hero mbr-section-full extHeader9 mbr-after-navbar" id="extHeader9-1f" style="background-image: url({{ asset('assets/images/mbr-1-2000x1328.jpg') }});">

    <div class="mbr-overlay" style="opacity: 0.4; background-color: rgb(0, 0, 0);"></div>

    <div class="mbr-table mbr-table-full">
        <div class="mbr-table-cell">
            <div class="container">
                <div class="mbr-section row">
                    <div class="mbr-table-md-up">

                        <div class="mbr-table-cell mbr-right-padding-md-up col-md-7 text-xs-center text-md-right">

                            <h3 class="mbr-section-title display-2">
                                Vous souhaitez participer à une étude participative ?
                            </h3>

                            <div class="mbr-section-text lead">
                                <p>
                                    Inscrivez-vous à Flash Nature et contribuer grâce à votre expertise, à lʼétude des mécanismes environnementaux et leurs impacts sur la biodiversité.                                </p>
                            </div>

                        </div>

                        <div class="form-table mbr-valign-top col-md-12  formblock" data-form-type="formoid">
                            <h4 class="mbr-section-title display-2 form-title">
                                Inscrivez-vous !
                            </h4>

                            {{ form_start(form) }}
                            {% for message in app.flashes('notice') %}
                                <div class="btn-success">
                                    {{ message }}
                                </div>
                                <br />
                            {% endfor %}
                            {% if form_errors(form) %}
                                <div class="alert alert-danger">
                                    {{ form_errors(form) }}
                                </div>
                            {% endif %}
                            <div class="col-xs-12">
                                {{ form_errors(form.mail) }}
                                {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
                            </div>


                            <div class="col-xs-12">

                                {{ form_widget (form.plainPassword.first, {'attr': {'class': 'form-control','placeholder': 'Mot de passe'}}) }}
                                {% if form_errors(form.plainPassword.first)  %}
                                    <div class="alert alert-danger">{{ form_errors(form.plainPassword.first) }}</div>
                                {% endif %}
                            </div>

                            <div class="col-xs-12">

                                {{ form_widget (form.plainPassword.second, { 'attr': { 'class': 'form-control','placeholder': 'Vérification'} }) }}
                                {% if form_errors(form.plainPassword.second)  %}
                                    <div class="alert alert-danger">{{ form_errors(form.plainPassword.second) }}</div>
                                {% endif %}
                            </div>
                            <div class="col-xs-12">
                                {{ form_widget (form.file,{ 'attr': { 'class': 'form-control','placeholder': 'Carte professionnelle'} }) }}
                                {% if form_errors(form.file)  %}
                                    <div class="alert alert-danger">{{ form_errors(form.file) }}</div>
                                {% endif %}
                            </div>
                            <div class="col-xs-12">
                                Pour obtenir le statut de naturaliste sur l'application, vous devez nous envoyer la photo de votre carte professionnelle au format jpg ou png (max 5Mo).
                            </div>
                            <br>

                            <div class="col-xs-12" style="margin-top: 10px; text-align: center">
                                <button type="submit" class="btn btn-white">
                                    Je m'inscris
                                </button>
                            </div>

                            <div class="mbr-section-lead lead">
                                Déjà membre ?
                                <p>
                                    Connectez-vous en
                                    <a href="/connexion">
                                        cliquant ici
                                    </a>
                                </p>

                            </div>

                            {{ form_rest(form) }}
                            {{ form_end(form) }}

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mbr-arrow mbr-arrow-floating hidden-sm-down" aria-hidden="true">
        <a href="#extFeatures2-1o">
            <i class="mbr-arrow-icon"></i>
        </a>
    </div>
</section>
