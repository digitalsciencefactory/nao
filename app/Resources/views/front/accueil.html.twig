                <div class="mbr-table-cell mbr-left-padding-md-up mbr-valign-top col-md-7 image-size" style="width: 51%;">
                    <div class="mbr-figure">
                        <img src="{{ asset('assets/images/naturaliste-jumelle-visuel-1400x1400.png') }}">
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

