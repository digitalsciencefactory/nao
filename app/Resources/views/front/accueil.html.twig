{% endblock %}

{% block body %}

<section class="mbr-section mbr-after-navbar" id="msg-box5-6" style="background-color: rgb(255, 255, 255); padding-top: 80px; padding-bottom: 40px;">

    <div class="container">
        <div class="row">
            <div class="mbr-table-md-up">

                <div class="mbr-table-cell col-md-5 text-xs-center text-md-right content-size">

                    <h3 class="mbr-section-title display-2">
                        Découvrez Flash Nature
                    </h3>

                    <div class="lead">
                        <p>Une application au service de la préservation des oiseaux</p>
                    </div>

                    <div>
                        <a class="btn btn-info" href="/inscription-naturaliste">
                            Je suis Naturaliste
                        </a>
                        <a class="btn btn-info" href="inscription-observateur">
                            Je suis un particulier
                        </a>
                    </div>

                </div>

                <div class="mbr-table-cell mbr-left-padding-md-up mbr-valign-top col-md-7 image-size" style="width: 70%;">
                    <div class="mbr-figure">
                        <img src="{{ asset('assets/images/06-oiseaux-bis-1400x965.jpg') }}">
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<section class="mbr-section article" id="msg-box3-t" style="background-color: rgb(61, 185, 176); padding-top: 80px; padding-bottom: 80px;">

